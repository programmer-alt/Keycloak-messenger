{
  "compilerOptions": {
    "target": "ES2020",
     "module": "NodeNext",                 // Главное изменение: позволяет TypeScript понимать и CJS и ESM
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
